<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="49dp"
            android:layout_height="52dp" app:srcCompat="@drawable/icon_kotlin"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="reminder_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_descript"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView_date"
            tools:text="reminder_text"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="reminder_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_date" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_descript"
            app:layout_constraintBottom_toTopOf="@+id/textView_time" tools:text="reminder_date"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="reminder_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_time" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_date"
            tools:text="reminder_time"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>
